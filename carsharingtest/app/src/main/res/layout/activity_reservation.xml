<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationActivity">

    <TextView
        android:id="@+id/tv_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_carid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@+id/tv_userid"
        app:layout_constraintStart_toStartOf="@+id/tv_userid"
        app:layout_constraintTop_toBottomOf="@+id/tv_userid" />

    <EditText
        android:id="@+id/et_startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="시작일"
        app:layout_constraintEnd_toEndOf="@+id/tv_carid"
        app:layout_constraintStart_toStartOf="@+id/tv_carid"
        app:layout_constraintTop_toBottomOf="@+id/tv_carid" />

    <EditText
        android:id="@+id/et_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="종료일"
        app:layout_constraintEnd_toEndOf="@+id/et_startdate"
        app:layout_constraintStart_toStartOf="@+id/et_startdate"
        app:layout_constraintTop_toBottomOf="@+id/et_startdate" />

    <Button
        android:id="@+id/btn_reservation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="예약"
        app:layout_constraintEnd_toEndOf="@+id/et_enddate"
        app:layout_constraintStart_toStartOf="@+id/et_enddate"
        app:layout_constraintTop_toBottomOf="@+id/et_enddate" />

</androidx.constraintlayout.widget.ConstraintLayout>